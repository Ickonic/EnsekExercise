@using EnsekDAL.Models
@{
    ViewBag.Title = "Index";
}

<h2>Meter Reading Upload</h2>
<br />

@using (Html.BeginForm("Upload", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div class="container">
        <table>
            <tr>
                <td style="width:300px;height:50px;"><label>Upload your CSV file</label><input type="file" name="file1" id="file1" style="width: 100%;" /> <br /></td>
                <td><input type="submit" value="Upload" class="btn btn-primary" /></td>
            </tr>
        </table>
    </div>
}

@if (TempData["MeterReadings"] != null)
{
    var meterReadings = (List<MeterReading>)TempData["MeterReadings"];

    <div style="font-size: 2em;">
        <div style="color: darkgreen;">Valid Uploads: @meterReadings.Where(m => m.IsValid == true).Count()</div>
        <div style="color: red;">Invalid Uploads: @meterReadings.Where(m => m.IsValid == false).Count()</div>
    </div>
}
